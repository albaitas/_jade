include common/_mixin

doctype html
html(lang='lt')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content="IE=edge,chrome=1")
        meta(name='viewport' content='width=device-width')
        link(href="main.css" rel="stylesheet")
        title
            block title
    body
        .wrapper
            .maincontent
                include common/header

                +navigation('nav', ['Pagrindinis', 'Naujienos', "Apie mus", "Palyginimas", 'Кrepšelis'], 3)

                include common/breadcrumbs

                .article
                    .container

                        include common/sidebar

                        .content
                            .section-title Коntento dalis
                            .content__desc
                                block content

        footer.footer
            .container
                .footer__content Visos teisės saugomos
